@model IEnumerable<Product>

@{
    ViewData["title"] = "Index";
}

<div class="card" style="top:30px">
    <div class="card-header bg-dark text-light ml-0 row container">
        <div class="col-md-6">
            <i class="fa fa-list-ul"></i>&nbsp;Lista de productos
        </div>
        <div class="col-md-6 text-right">
            <a asp-action="Create" asp-controller="Product" class="btn btn-primary btn-sm text-white">
                <i class="fa fa-plus"></i>
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            @if (Model.Count() > 0)
            {
                <div class="table-responisve">
                    <table calss="table table-bordered">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(x=>x.Name)</th>
                                <th>@Html.DisplayNameFor(x=>x.Description)</th>
                                <th>@Html.DisplayNameFor(x=>x.Price)</th>
                                <th>@Html.DisplayNameFor(x=>x.Status)</th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(x=>item.Name)</td>
                                    <td>@Html.DisplayFor(x=>item.Description)</td>
                                    <td>@Html.DisplayFor(x=>item.Status)</td>
                                    <td><span class='badge @(item.Status ? "badge-success" : "badge-danger")'>@(item.Status ? "Activo" : "Inactivo")</span></td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" title="Editar"
                                                class="btn btn-info btn-sm text-white">
                                                <i class="fa fa-pencil"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" title="Eliminar"
                                                class="btn btn-danger btn-sm text-white">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>                                
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p>No hay registros en la base de datos...</p>
            }
        </div>
    </div>
</div>